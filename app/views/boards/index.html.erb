<div class= "container" >
  <div class="card" style="width: 30rem; margin: auto;">
    <div class="card-header">

      <div class="d-flex p-2 align-items-center">
        <h6>All boards</h6>
        <button type="button" class="ms-auto btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#exampleModal">Add a new board</button>
      </div>

    </div>
    <% @list_of_boards.each do |a_board| %>
      <ul class="list-group list-group-flush">
        <a href="/boards/<%=a_board.id%>" class="d-flex list-group-item list-group-item-action"><%= a_board.name%>
          <div class="ms-auto">
            <i class="fa-solid fa-chevron-right"></i>
          </div>
        </a>
      <%end%>
    </ul>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">New board</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/insert_board" method="post">
          <div class="mb-3">
            <label for="name_box" class="form-label">Name</label>
            <input type="text" class="form-control" id="name_box" name="query_name">

          </div>

          <button type="submit" class="btn btn-primary">Add board</button>
        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
